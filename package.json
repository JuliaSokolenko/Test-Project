{
  "name": "game-developer-assignment",
  "version": "1.0.0",
  "description": "Pixi.js game demo: Ace of Shadows, Magic Words, Phoenix Flame",
  "type": "module",
  "scripts": {
    "dev": "webpack serve --config webpack.config.cjs --mode development",
    "build": "tsc --noEmit && eslint src --ext .ts,.js && webpack --config webpack.config.cjs --mode production",
    "preview": "npx serve dist -s",
    "lint": "eslint src --ext .ts,.js",
    "format": "prettier --write \"src/**/*.{ts,js,css,json}\" \"index.html\""
  },
  "dependencies": {
    "pixi.js": "^8.5.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "prettier": "^3.2.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.0",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  }
}
